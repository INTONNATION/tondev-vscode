{
	"name": "tondev",
	"displayName": "TONDev",
	"description": "Free TON Development",
	"publisher": "TONLabs",
	"version": "0.0.2",
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:tondev.solCompile"
	],
	"main": "./out/extension.js",
	"repository": {
		"url": "https://github.com/tonlabs/tondev"
	},
	"contributes": {
		"commands": [
			{
				"command": "tondev.solCompile",
				"title": "Compile Solidity"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"when": "resourceExtname == .sol",
					"command": "tondev.solCompile",
					"group": "TONDev"
				}
			]
		},
		"taskDefinitions": [
			{
				"type": "tondev",
				"required": [],
				"properties": {}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"tondev": "^0.1.1",
		"@types/vscode": "^1.52.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.15.0",
		"@typescript-eslint/eslint-plugin": "^4.9.0",
		"@typescript-eslint/parser": "^4.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.1.2",
		"vscode-test": "^1.4.1"
	}
}